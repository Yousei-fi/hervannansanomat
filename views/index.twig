{% extends "base.twig" %}

{% block content %}
    <main>
        {% if posts %}
            {% for post in posts %}
                <article>
                    <h2><a href="{{ post.link }}">{{ post.title }}</a></h2>
                    <div>{{ post.content }}</div>
                </article>
            {% endfor %}
        {% else %}
            <p>No posts found.</p>
        {% endif %}
    </main>
{% endblock %}

