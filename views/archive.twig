{% extends "base.twig" %}

{% block content %}
    <section class="bg-white py-10 md:py-14">
        <div class="container space-y-3">
            <p class="eyebrow">Arkisto</p>
            <h1 class="section-heading">{{ title ?: function('wp_get_document_title') }}</h1>
            {% if term and term.description %}
                <p class="section-copy max-w-3xl">{{ term.description }}</p>
            {% endif %}
        </div>
    </section>

    <section class="container py-10">
        {% if posts %}
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {% for post in posts %}
                    <article class="card h-full flex flex-col">
                        {% if post.thumbnail %}
                            <a href="{{ post.link }}" class="block">
                                <img src="{{ post.thumbnail.src('medium_large') }}" alt="{{ post.title }}" class="h-44 w-full object-cover">
                            </a>
                        {% endif %}
                        <div class="card-body flex-1">
                            <div class="meta">
                                <span>{{ post.date('j.n.Y') }}</span>
                                {% set cats = post.terms('category') %}
                                {% if cats %}
                                    <span class="flex flex-wrap gap-1">
                                        {% for cat in cats %}
                                            <span class="badge">{{ cat.name }}</span>
                                        {% endfor %}
                                    </span>
                                {% endif %}
                            </div>
                            <h2 class="text-xl font-serif font-semibold text-brand-dark">
                                <a href="{{ post.link }}">{{ post.title }}</a>
                            </h2>
                            {% if post.excerpt %}
                                <p class="text-gray-600">{{ post.excerpt({ words: 24 }) }}</p>
                            {% endif %}
                            <div class="mt-auto pt-3">
                                <a class="btn-ghost" href="{{ post.link }}">Lue lisää →</a>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>

            {% if posts.pagination %}
                <div class="flex justify-center pt-8">
                    {{ posts.pagination({ prev_text: 'Edellinen', next_text: 'Seuraava' }) }}
                </div>
            {% endif %}
        {% else %}
            <p>Ei artikkeleita.</p>
        {% endif %}
    </section>
{% endblock %}


